#!/bin/bash

# Setup script for jiji project

set -e  # Exit on any error

echo "Setting up jiji project..."

# Create symbolic links to LLM.md for different AI systems
echo "Creating symbolic links..."
ln -sf docs/LLM.md .rules
ln -sf docs/LLM.md CLAUDE.md
ln -sf docs/LLM.md GEMINI.md
ln -sf docs/LLM.md QWEN.md

echo "Installing deno dependencies..."
deno install

echo "Setup complete!"
