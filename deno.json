{
  "name": "@jiji/cli",
  "version": "0.3.0",
  "license": "MIT",
  "exports": "./src/main.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "run": "deno run --allow-read --allow-write --allow-net --allow-run --allow-ffi --allow-env --allow-sys src/main.ts",
    "dev:build": "deno compile --allow-read --allow-write --allow-net --allow-run --allow-ffi --allow-env --allow-sys --include src/jiji.yml --output build/jiji_dev src/main.ts",
    "dev:install": "deno task dev:build && sudo cp build/jiji_dev /usr/local/bin/jiji_dev",
    "build": "deno compile --allow-read --allow-write --allow-net --allow-run --allow-ffi --allow-env --allow-sys --include src/jiji.yml --output build/jiji src/main.ts",
    "install": "deno task build && sudo cp build/jiji /usr/local/bin/jiji",
    "version": "./bin/version",
    "test": "deno test --allow-all --parallel",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno fmt --check && deno lint && deno test --allow-all --parallel"
  },
  "imports": {
    "@cliffy/ansi/colors": "jsr:@cliffy/ansi@^1.0.0-rc.8/colors",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.10",
    "cpu-features": "npm:cpu-features@^0.0.10",
    "node-ssh": "npm:node-ssh@^13.2.1",
    "ssh2": "npm:ssh2@^1.17.0"
  },
  "allowScripts": [
    "npm:cpu-features@0.0.10",
    "npm:ssh2@1.17.0"
  ]
}
